<Window
    x:Class="CourseRevit2025.FirstProject.View.SelectElementView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:CourseRevit2025.FirstProject.View"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Width="400"
    Height="200"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">
    <Window.Resources>
        <ResourceDictionary Source="/CourseRevit2025.FirstProject;component/Resources/MainStyle.xaml" />
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>

        <ComboBox
            x:Name="elementsViewBox"
            Margin="5"
            Style="{StaticResource RevitComboBox}" />

        <Button
            Grid.Row="1"
            Margin="10"
            Click="Button_Click"
            Content="Ok"
            Style="{StaticResource RevitButton}" />
    </Grid>
</Window>
