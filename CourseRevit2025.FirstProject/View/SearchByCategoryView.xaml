<Window
    x:Class="CourseRevit2025.FirstProject.View.SearchByCategoryView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="clr-namespace:CourseRevit2025.FirstProject.View.Controls"
    xmlns:local="clr-namespace:CourseRevit2025.FirstProject.View"
    xmlns:models="clr-namespace:CourseRevit2025.FirstProject.Models"
    Width="400"
    Height="400"
    WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <ResourceDictionary Source="/CourseRevit2025.FirstProject;component/Resources/MainStyle.xaml" />
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition />
        </Grid.RowDefinitions>

        <ComboBox
            DisplayMemberPath="Name"
            ItemsSource="{Binding SearchCategories}"
            SelectedItem="{Binding SelectedCategory}"
            Style="{StaticResource RevitComboBox}" />

        <controls:ShowElementsView Grid.Row="1" DataContext="{Binding}" />

    </Grid>

</Window>
