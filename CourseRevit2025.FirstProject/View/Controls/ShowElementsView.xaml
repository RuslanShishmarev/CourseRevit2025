<UserControl
    x:Class="CourseRevit2025.FirstProject.View.Controls.ShowElementsView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:CourseRevit2025.FirstProject.View.Controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:models="clr-namespace:CourseRevit2025.FirstProject.Models"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <UserControl.Resources>
        <ResourceDictionary Source="/CourseRevit2025.FirstProject;component/Resources/MainStyle.xaml" />
    </UserControl.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>

            <CheckBox
                Grid.Column="0"
                Content="Inner view"
                IsChecked="{Binding InnerView}"
                Style="{StaticResource RevitCheckBox}" />
            <ComboBox
                Grid.Column="1"
                DisplayMemberPath="Name"
                ItemsSource="{Binding ViewListModes}"
                SelectedItem="{Binding SelectedViewMode}"
                Style="{StaticResource RevitComboBox}" />
        </Grid>

        <local:BlocksElementsControl Grid.Row="1" DataContext="{Binding}">
            <local:BlocksElementsControl.Style>
                <Style TargetType="UserControl">
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding SelectedViewMode.Value}" Value="{x:Static models:ViewModeType.Table}">
                            <Setter Property="Visibility" Value="Collapsed" />
                        </DataTrigger>
                        <DataTrigger Binding="{Binding SelectedViewMode.Value}" Value="{x:Static models:ViewModeType.Blocks}">
                            <Setter Property="Visibility" Value="Visible" />
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </local:BlocksElementsControl.Style>
        </local:BlocksElementsControl>

        <local:TableElementsControl Grid.Row="1" DataContext="{Binding}">
            <local:TableElementsControl.Style>
                <Style TargetType="UserControl">
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding SelectedViewMode.Value}" Value="{x:Static models:ViewModeType.Table}">
                            <Setter Property="Visibility" Value="Visible" />
                        </DataTrigger>
                        <DataTrigger Binding="{Binding SelectedViewMode.Value}" Value="{x:Static models:ViewModeType.Blocks}">
                            <Setter Property="Visibility" Value="Collapsed" />
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </local:TableElementsControl.Style>
        </local:TableElementsControl>

    </Grid>
</UserControl>
